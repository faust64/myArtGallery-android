<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/Wheat"
    tools:context="com.unetresgrossebite.myartgallery.EventActivity">

    <TextView
        android:id="@+id/event_title"
        android:text="@string/msg_query_in_progress"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:textColor="@color/MidnightBlue"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_title_material"
        android:shadowColor="@color/Indigo"
        android:background="@color/Wheat"
        android:layout_height="@dimen/abc_action_bar_stacked_max_height" />
    <TextView
        android:id="@+id/event_descr"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:text=" "
        android:textColor="@color/MidnightBlue"
        android:textStyle="italic"
        android:textSize="@dimen/abc_text_size_small_material"
        android:shadowColor="@color/Indigo"
        android:background="@color/Wheat"
        android:layout_height="@dimen/abc_action_button_min_height_material"
        android:layout_below="@id/event_title" />
    <ListView
        android:id="@+id/event_data"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:background="@color/Wheat"
        android:layout_below="@id/event_descr" />
</RelativeLayout>